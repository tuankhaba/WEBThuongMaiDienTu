                <div style="position: relative;">
                    <span style="position:absolute" class="mkhientai check_ttk">@ViewData["TenTaiKhoan"]</span>
                </div>
                <p class="td_mk">Nhập mật khẩu</p>
                <input placeholder="Nhập mật khẩu" required="required" title="Nhập mật khẩu" name="MK" class="pass2 btn btn-outline-info mk" type="password" maxlength="32" />
