@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Home/Layout.cshtml";
}
<style>
    .mk:hover {
        background-color: azure;
    }

    .mk:focus {
        background-color: white;
    }

    .mk {
        width: 100%;
        height: 40px;
        text-align: left;
        margin-bottom: 30px;
        cursor: text;
    }

    .td_mk {
        float: left;
        margin-bottom: 5px;
    }

    .ltd {
        margin-top: 10px;
        height: 50px;
        font-size: 18px;
    }

        .ltd:hover {
            background-color: aqua;
        }

    .eye {
        cursor: pointer;
        position: sticky;
        margin-top: -60px;
        margin-bottom: 40px;
        float: right;
        margin-right: 15px;
    }

    .bi-eye-slash {
        display: none;
    }

    .mkhientai {
        color: red;
        left: 5px;
        top: 0;
        font-size: 13px;
        margin-top: -30px;
    }

    .mkmoinhaplai {
        color: red;
        margin-top: -29px;
        font-size: 13px;
        margin-left: 5px;
    }

    .itemm {
        background-color: white;
        border-radius: 5px;
        box-shadow: 1px 4px 10px #AAAAAA;
    }

    .lb_dangky {
        text-align: center;
        padding: 5px;
        padding-top: 10px;
        width: 500px;
        margin-left: -30px;
        margin-bottom: 10px;
        margin-top: -40px;
        border-top-left-radius: 5px;
        border-top-right-radius: 5px;
    }
</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">

