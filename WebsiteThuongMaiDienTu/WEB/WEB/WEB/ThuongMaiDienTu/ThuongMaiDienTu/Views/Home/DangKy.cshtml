                    </svg>
                </div>
                <p class="td_mk">Nhập họ và tên của bạn</p>
                <input placeholder="Nhập họ và tên" title="Nhập họ và tên" name="HoVaTen" class="hoten btn btn-outline-info mk" type="text" maxlength="50" />
                <div style="position:relative; float:left;" class="w-100">
                    <span style="position:absolute;" class="mkmoinhaplai sdt w-100 check_hoten"></span>
                </div>
                <p class="td_mk">Nhập số điện thoại</p>
                <input placeholder="Nhập số điện thoại" title="Nhập số điện thoại" name="SoDienThoai" oninput="CheckPhone(this)" class="dienthoai btn btn-outline-info mk" type="text" maxlength="11" />
                <div style="position:relative; float:left;" class="w-100">
                    <span style="position:absolute;" class="mkmoinhaplai sdt w-100 check_sdt"></span>
                </div>
                <p class="td_mk">Nhập email</p>
                <input placeholder="vidu@email.com" title="Nhập email" name="Email" class=" em btn btn-outline-info mk" type="text" maxlength="32" />
                <div style="position:relative; float:left;" class="w-100">
                    <span style="position: absolute;" class="mkmoinhaplai w-100 check_email"></span>
                </div>
                <div>
                    <span class="mkmoinhaplai" style="color:black;">Bạn đã có tải khoản? <a href="/Home/DangNhap" style="text-decoration:none;">Đăng nhập</a> tại đây!</span>
                </div>
                <input type="button" disabled class=" ltd w-100 btn btn-info" value="ĐĂNG KÝ">
                <button type="submit" id="DANGKY" hidden>ĐĂNG KÝ</button>
            </div>

        }
    </div>
</div>
@if (ViewBag.loidk != null)
{
