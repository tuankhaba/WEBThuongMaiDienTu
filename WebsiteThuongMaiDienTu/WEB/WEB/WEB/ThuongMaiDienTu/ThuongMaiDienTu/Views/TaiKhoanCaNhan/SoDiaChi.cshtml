@using ThuongMaiDienTu.Models
@model IEnumerable<ThuongMaiDienTu.Models.ThongTinLienHe>
@{
    ViewBag.Title = "Sổ địa chỉ của bạn";
    Layout = "~/Views/TaiKhoanCaNhan/TrangCaNhan.cshtml";
}
<link href="~/Content/SoDiaChi.css" rel="stylesheet" />

<div id="list-item-2" style="min-height:900px;">
    <h4>
        <i class="bi bi-house-gear-fill"></i>
        Sổ địa chỉ
    </h4>
    <hr />
    <div>
        <div class="row">
            <div class="row">
                <button class="btn w-100 btn-info  itemm btn_dc" data-bs-toggle="modal" data-bs-target="#ThemDiaChi" style="margin-left:10px; height:70px; font-size:20px;">
                    <svg style="margin-bottom:4px;" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-square-dotted" viewBox="0 0 16 16">
                        <path d="M2.5 0c-.166 0-.33.016-.487.048l.194.98A1.51 1.51 0 0 1 2.5 1h.458V0H2.5zm2.292 0h-.917v1h.917V0zm1.833 0h-.917v1h.917V0zm1.833 0h-.916v1h.916V0zm1.834 0h-.917v1h.917V0zm1.833 0h-.917v1h.917V0zM13.5 0h-.458v1h.458c.1 0 .199.01.293.029l.194-.981A2.51 2.51 0 0 0 13.5 0zm2.079 1.11a2.511 2.511 0 0 0-.69-.689l-.556.831c.164.11.305.251.415.415l.83-.556zM1.11.421a2.511 2.511 0 0 0-.689.69l.831.556c.11-.164.251-.305.415-.415L1.11.422zM16 2.5c0-.166-.016-.33-.048-.487l-.98.194c.018.094.028.192.028.293v.458h1V2.5zM.048 2.013A2.51 2.51 0 0 0 0 2.5v.458h1V2.5c0-.1.01-.199.029-.293l-.981-.194zM0 3.875v.917h1v-.917H0zm16 .917v-.917h-1v.917h1zM0 5.708v.917h1v-.917H0zm16 .917v-.917h-1v.917h1zM0 7.542v.916h1v-.916H0zm15 .916h1v-.916h-1v.916zM0 9.375v.917h1v-.917H0zm16 .917v-.917h-1v.917h1zm-16 .916v.917h1v-.917H0zm16 .917v-.917h-1v.917h1zm-16 .917v.458c0 .166.016.33.048.487l.98-.194A1.51 1.51 0 0 1 1 13.5v-.458H0zm16 .458v-.458h-1v.458c0 .1-.01.199-.029.293l.981.194c.032-.158.048-.32.048-.487zM.421 14.89c.183.272.417.506.69.689l.556-.831a1.51 1.51 0 0 1-.415-.415l-.83.556zm14.469.689c.272-.183.506-.417.689-.69l-.831-.556c-.11.164-.251.305-.415.415l.556.83zm-12.877.373c.158.032.32.048.487.048h.458v-1H2.5c-.1 0-.199-.01-.293-.029l-.194.981zM13.5 16c.166 0 .33-.016.487-.048l-.194-.98A1.51 1.51 0 0 1 13.5 15h-.458v1h.458zm-9.625 0h.917v-1h-.917v1zm1.833 0h.917v-1h-.917v1zm1.834-1v1h.916v-1h-.916zm1.833 1h.917v-1h-.917v1zm1.833 0h.917v-1h-.917v1zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
                    </svg>
                    THÊM ĐỊA CHỈ MỚI
                </button>
                <div class="modal fade" id="ThemDiaChi" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg ">
                        <div class="modal-content" style="margin-top:100px;">
                            <div class="modal-header">
                                <h4 class="modal-title" id="staticBackdropLabel">Thêm địa chỉ mới</h4>
                            </div>
                            @Html.Action("ThemDiaChiMoi");
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top: 20px;">
                @{ var sl = 0;
                    foreach (var item in Model)
                    {
                        if (item.An == false)
                        {
                            sl++;
                                <div class="itemm row" style=" margin-left: 10px; margin-bottom:20px; padding:15px;position:relative;">
                                    <div class="col-lg-9 col-12">
                                        <b style="font-size:17px; margin-bottom:15px;">@item.TenNguoiNhan</b><br />
                                        <a><span class="mo">Địa chỉ: </span> @HoTro.LayDiaChi(item.MaXP) </a><br />
                                        <a><span class="mo">Địa điểm cụ thể: </span>@item.DiaChiCuThe</a><br />
                                        <a><span class="mo">Số điện thoại: </span>@item.SoDienThoai </a>
                                    </div>
                                    <div class="col-lg-3 col-12">
                                        <div class="row">
                                            <div class="col-5">
                                                <div class="row">
                                                    <div class="col-lg-12 col-6" style="margin-top:5px;">
                                                        <center><a href="@Url.Action("SuaDiaChi", "TaiKhoanCaNhan", new { MaLH = item.MaLH, url = Request.Url.ToString() })" class="btn w-100 btn-outline-info">Sửa</a></center>
                                                    </div>
                                                    <div class="col-lg-12 col-6" style="margin-top:5px;">
                                                        <center><a href="@Url.Action("XoaDiaChi", "TaiKhoanCaNhan", new { MaLH = item.MaLH })" class="btn w-100 btn-outline-danger">Xóa</a></center>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-7" style="position:relative;">
                                                <a href="@Url.Action("DatlamMacDinh", "TaiKhoanCaNhan", new { MaLH = item.MaLH })" style="position:absolute; bottom:0; right:0;" class="btn btn-outline-primary">Đặt làm mặt định</a>
                                            </div>
                                        </div>
                                    </div>
                                    @if (item.MacDinh == true)
                                    {
                                    <div class="macdinh">
                                        Mặc định
                                    </div>
                                    }
                                </div>
                        }
                    }
                    if(sl==0)
            {
            <center><h5>Bạn chưa cập nhật địa chỉ giao hàng</h5></center>
            }
                }
            </div>
        </div>
    </div>
</div>

