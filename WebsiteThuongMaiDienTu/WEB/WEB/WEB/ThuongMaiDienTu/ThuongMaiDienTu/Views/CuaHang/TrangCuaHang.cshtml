@using ThuongMaiDienTu.Models
@model ThuongMaiDienTu.Models.CuaHang
@{
    ViewBag.Title = "TrangCuaHang";
    Layout = "~/Views/Home/Layout.cshtml";
}
<head>
    <title>Cửa hàng của Đạt</title>
</head>
<link href="~/Content/TrangCuaHang.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/TheSanPhamm.css" />
<link rel="stylesheet" href="~/Content/ListBox.css" />
<script src="~/js/moment.js"></script>
<div class="row">
    <div class="col-md-4 col-sm-12 shop">
        <div style="float:left; margin-right:10px; background-color:white; border:1px solid #00ffff; width:100px; height:100px; border-radius:50%;">
            @if (Model.AnhDaiDien == null)
            {
                <img src="/Image/shop.jpg" style="width:80px;height:80px; border-radius:50%; margin: 9px;" />
            }
            else
            {
                <img src="@Model.AnhDaiDien" style="width:80px;height:80px; border-radius:50%; margin: 9px;" />

            }
        </div>
        <div style="float:left; margin-right:10px;">
            <h5>@Model.TenCuaHang</h5>
            @HoTro.LayDanhGiaShop(Model)
